@model TweeterApp.Models.ViewModels.EditCommentViewModel

<h2>edit comment</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="PostId"/>
    <input type="hidden" asp-for="CommentId" />
    <div>
        <label for="Content">Content</label>
        <textarea asp-for="Content" class="form-control" id="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-action="Details" asp-controller="Post" asp-route-id="@Model.PostId" class="btn btn-secondary">Back to post</a>
</form>