@using TweeterApp.Models.ViewModels
@model ProfileEditViewModel
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    
    <div class="form-group">
        <label>First name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bio</label>
        <input asp-for="Bio" class="form-control" />
    </div>
    <div class="form-group">
        <label>Avatar</label>
        <input asp-for="Avatar" type="file" class="form-control" accept=".jpg / .jpeg / .png / .gif" />
        <span asp-validation-for="Avatar" class="text-danger"></span>
        @if(Model.CurrentAvatarPath != null){
            <img src="@Model.CurrentAvatarPath" width="100"/>
        }
    </div>
</form>
