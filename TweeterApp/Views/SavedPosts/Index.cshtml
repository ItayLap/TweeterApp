@model List<TweeterApp.Models.PostModel>

@{
    ViewData["Title"] = "Saved Posts";
}

<h2 class="mb-4">📌 Saved Posts</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">You haven't saved any posts yet.</div>
    <p>You haven't saved any posts yet</p>
    <a asp-action="Index" asp-controller="Post">Find posts to save</a>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var post in Model)
        {
            <div class="col" style="margin-bottom:30px">
                <div class="card h-100" style="margin-bottom:10px">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Content</p>
                    </div>
                    <div class="card-footer text-muted">
                        Saved on: @post.CreatedDate.ToShortDateString()
                    </div>
                </div>
                <form asp-action="Delete" asp-controller="SavedPosts" method="post" class="mb-0">
                    <input type="hidden" name="postId" value="@post.Id"/>
                    <button type="submit">Delete from saved posts</button>
                </form>
            </div>
        }
    </div>
}